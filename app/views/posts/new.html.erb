<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @post do |f| %>

# データ型がstringで自由記述の入力フォーム
  <div class="field">
    <%= f.label :項目名 %>
    <%= f.text_field :カラム名, :size => 30 %>
  </div>

# データ型がstringで選択式の入力フォーム
  <div class="field">
    <%= f.label :項目名  %>
    <%= f.select :カラム名, 
    [["A", "A"], 
    ["B", "B"], 
    ["C", "C"]], include_blank: "選択して下さい" %>
  </div>

# データ型がintegerで数字のみを入力するフォーム
  <div class="field">
    <%= f.label :項目名  %>
    <%= f.number_field :カラム名, :size => 10 %>
  </div>

# データ型がtextで自由記述の入力フォーム
  <div class="field">
    <%= f.label :項目名  %>
    <%= f.text_area :カラム名, :size => "30x2" %>
  </div>

  <%= f.submit "観光地を投稿する" %>
<% end %>


<%= link_to "観光地一覧に戻る", コントローラー名_path %>